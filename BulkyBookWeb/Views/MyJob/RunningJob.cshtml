


@{
    ViewData["Title"] = "Running Job";
}


<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary text-uppercase">Running Job</h2>
        </div>
    </div>

    <table class="table table-bordered table table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>Job Id</th>
                <th>Job Title</th>
                <th>Job Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="30%">@obj.JobTitle</td>
                    <td width="40%">@obj.JobDescription</td>
                    <td width="10%">@obj.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mr-2" asp-controller="MyJob" asp-action="StartJob" asp-route-id="@obj.Id">Start</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
