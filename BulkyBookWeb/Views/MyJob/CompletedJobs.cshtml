@model IEnumerable<WorkBid.Models.Job>

@{
    ViewData["Title"] = "Completed Jobs";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary text-uppercase">Completed Job</h2>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>Job Id</th>
                <th>Job Title</th>
                <th>Job Description</th>
                <th>Price</th>
                <th>Completion Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td width="10%">@job.Id</td>
                    <td width="30%">@job.JobTitle</td>
                    <td width="40%">@job.JobDescription</td>
                    <td width="10%">@job.Price</td>
                    <td width="10%">@job.CreatedDateTime.ToString("MM/dd/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>


