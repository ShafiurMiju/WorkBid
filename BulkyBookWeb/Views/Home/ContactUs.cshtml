@using WorkBid.Models
@model ContactUs

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary text-uppercase">Contact Us</h2>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form asp-action="ContactUs" method="post" class="bg-dark text-white p-4 rounded">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control bg-dark text-white" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control bg-dark text-white" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control bg-dark text-white" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Message" class="form-label"></label>
            <textarea asp-for="Message" class="form-control bg-dark text-white" rows="5"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Send</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

