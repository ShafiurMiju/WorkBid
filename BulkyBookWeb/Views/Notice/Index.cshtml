@using WorkBid.Helper
@model IEnumerable<WorkBid.Models.Notice>

@{
    ViewData["Title"] = "Notice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="notice-section container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary text-uppercase">Notices</h2>
        </div>
    </div>

    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var notice in Model)
            {
                <li class="list-group-item">
                    <h5 class="text-primary">@notice.Title</h5>
                    <small class="text-muted">@notice.DatePosted.TimeAgo()</small>
                    <hr />
                    <p>@notice.Content</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No notices available at the moment.</p>
    }
</div>
