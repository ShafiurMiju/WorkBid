@using WorkBid.Models
@model Job
@{
    ViewData["Title"] = "CreateJob";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Job</h2>
            <hr />
            <div class="mb-3">
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JobQuantity"></label>
                <input asp-for="JobQuantity" class="form-control" />
                <span asp-validation-for="JobQuantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JobDescription"></label>
                <input asp-for="JobDescription" class="form-control" />
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-6">
                <a asp-controller="Admin" asp-action="alljob" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
            <div class="col-6 text-end">
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

